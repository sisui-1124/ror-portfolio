<div id="comments-list">
  <h2>コメント</h2>
  <ul class="list-unstyled">
    <% comments.each do |comment| %>
      <li class="media">
        <div class="media-body">
          <div id="media-head">
            <h5 class="mt-0 mb-1"><%= comment.user.name %></h5>
            <span><%= comment.updated_at.strftime("%Y年%m月%d日 %H時%m分") %></span>
          </div>
          <%= comment.text %>
        </div>
      </li>
    <% end %>
  </ul>
</div>