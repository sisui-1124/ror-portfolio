<div id="tag_area" class="row">
  <div class="tag_boxes col-md-3 col-6">
    <%= link_to image_tag('/ror4.jpg', class: 'tag_img'), articles_path(tag_id: 1) %>
  </div>
  <div class="tag_boxes col-md-3 col-6">
    <%= link_to image_tag('/ror5.jpg', class: 'tag_img'), articles_path(tag_id: 2) %>
  </div>
  <div class="tag_boxes col-md-3 col-6">
    <%= link_to image_tag('/python3.jpg', class: 'tag_img'), articles_path(tag_id: 4) %>
  </div>
  <div class="tag_boxes col-md-3 col-6">
    <%= link_to image_tag('/django2.jpg', class: 'tag_img'), articles_path(tag_id: 5) %>
  </div>
</div>

<h3><%= @list_title %></h3>

<table class="table table-hover boards__table">
  <% @articles.each do |article| %>
    <tr>
      <th><%= article.id %></th>
      <td><%= article.title %></td>
      <td><%= article.eyecatch %></td>
      <td><%= link_to '詳細', article, class: 'btn btn-outline-dark' %></td>
      <td><%= article.updated_at %></td>
    </tr>
  <% end %>
</table>

<%= paginate @articles %>

<%= javascript_include_tag 'articles/index.js' %>