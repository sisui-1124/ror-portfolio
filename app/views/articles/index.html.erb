<% if flash[:notice] %>
  <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>

<table class="table table-hover boards__table">
  <% @articles.each do |article| %>
    <tr>
      <th><%= article.id %></th>
      <td><%= article.title %></td>
      <td><%= article.eyecatch %></td>
      <td><%= link_to '詳細', article, class: 'btn btn-outline-dark' %></td>
      <td><%= article.updated_at %></td>
    </tr>
  <% end %>
</table>

<%= paginate @articles %>